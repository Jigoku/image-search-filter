{
	"manifest_version": 2,
	"name": "Image Search Filter",
	"short_name": "ISF",
	"version": "1.0",
	"author": "Ricky K. Thomson",
	"description": "Hides results hosted on spam websites from Google's image search",
	"homepage_url": "https://github.com/Jigoku/image-search-filter",

	"permissions": ["storage"],

	"applications": {
		"gecko": {
			"id": "addon@example.com",
			"strict_min_version": "42.0"
		}
	},
	"options_ui": {
		"page": "popup/isf.html",
		"browser_style": true
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": "icons/isf-48.png",
		"default_title": "Image Search Filter",
		"default_popup": "popup/isf.html"
	},


	"icons": {
		"48": "icons/isf-48.png"
	},

	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"include_globs": ["*://*.google.*/search*&tbm=isch*"],
			"js": ["main.js"]
		}
	],

	"background": {
		"scripts": ["background.js", "popup/isf.js"]
	}

}
